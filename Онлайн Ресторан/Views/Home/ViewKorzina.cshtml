@{
    ViewBag.Title = "Korzina";
}

<table class="table table-bordered table-primary">
    <tr>
        <th><p>Id</p></th>
        <th><p>Название</p></th>
        <th><p>Цена</p></th>
        <th><p>Кол-во</p></th>
    </tr>


    @foreach (var p in ViewBag.Korzinas as IEnumerable<Korzina>)
    {
        <tr>
            <td><p>@p.Id</p></td>
            <td><p>@p.Name</p></td>
            <td><p>@p.Price</p></td>
            <td><p>@p.Koll</p></td>
            @* <td><a href="/Home/Plus/@p.Id">+</a></td>
            <td><a href="/Home/Minus/@p.Id">+</a></td> *@
            <td><a href="/Home/Cancel/@p.Id">Отмена</a></td>
        </tr>
    }
</table>

<a href="/Home/ExecuteOrder">Оформить заказ</a>
<style>
    .table td {
        border: 1px solid black;
    }

    .table th {
        border: 1px solid black;
    }
</style>


