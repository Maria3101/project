@{
    ViewBag.Title = "Orders";
}


<h2>Клиенты</h2>
<table class="table table-bordered table-primary">
    <tr>
        <th><p>ФИО</p></th>
        <th><p>Адрес</p></th>
        <th><p>Телефон</p></th>
    </tr>


    @foreach (var p in ViewBag.Customers as IEnumerable<Client>)
    {
        <tr>
            <td><p>@p.Name</p></td>
            <td><p>@p.Address</p></td>
            <td><p>@p.Phone</p></td>
            <td><a href="/Home/OrderComplete/@p.Id">Выбор клиента</a></td>
        </tr>
    }
</table>


<h2>Корзина</h2>
<table class="table table-bordered table-primary">
    <tr>
        <th><p>Id</p></th>
        <th><p>Название</p></th>
        <th><p>Цена</p></th>
        <th><p>Кол-во</p></th>
    </tr>


    @foreach (var p in ViewBag.Korzinas as IEnumerable<Korzina>)
    {
        <tr>
            <td><p>@p.Id</p></td>
            <td><p>@p.Name</p></td>
            <td><p>@p.Price</p></td>
            <td><p>@p.Koll</p></td>
        </tr>
    }
</table>

<a href="/Home/BackToTovars">Вернуться на Корзину</a>

<style>
    .table td {
        border: 1px solid black;
    }

    .table th {
        border: 1px solid black;
    }
</style>


